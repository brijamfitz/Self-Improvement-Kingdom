<div class="login-signup-body">
    <div class="jumbotron login-card">
        <h1 class="display-4 login-title">Self-Improvement Kingdom</h1>
        <img src="/images/castle-1.png" alt="wood hut" class="login-hut" />
        <img src="/images/archer.png" alt="archer" class="login-archer" />
        <img src="/images/knight.png" alt="knight" class="login-knight" />
        <img src="/images/mage.png" alt="mage" class="login-mage" />
        <img src="/images/login-castle.png" alt="castle" class="login-castle" />
        <p class="lead">Build your army and battle your way to self-improvement!</p>
        <hr class="my-4">

        <div class="col-md-12 login-container">
            <h5>Login to continue your quest!</H5>
            <p style="color:yellow">Recruiters and hiring managers, please use username: "test" and password: "test" to login!</p>
            <p style="color:crimson">
                {{#if msg}}
                {{msg}}
                {{/if}}
            </p>
            <form action="/api/login/local" method="post">
                <div>
                    <label class="sr-only">Username:</label>
                    <input type="text" name="username" placeholder="Username" id="username-input" />
                </div>
                <div>
                    <label class="sr-only">Password:</label>
                    <input type="password" name="password" placeholder="Password" id="password-input" />
                </div>
                <div>
                    <input type="submit" value="Login" class="btn btn-lg btn-primary" id="login-btn" />
                </div>
            </form>
            <h6>Don't have an account yet? Create one <a href="/signup" id="create-link">here</a>.</h6>
            <hr>
            <h6 id="about">Learn more about Self-Improvement Kingdom <a data-toggle="modal" href="#gameIntroModal" id="about-link">here</a>.</h6>
        </div>
    </div>
</div>

<!-- ======================================================================================== -->
<!-- GAME INTRO MODAL -->
<!-- ======================================================================================== -->
<div class="modal fade bd-example-modal-md" id="gameIntroModal" role="dialog">
    <div class="modal-dialog modal-lg">
        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Welcome to Self-Improvement Kingdom!</h4>
                <button type="button" class="close" data-dismiss="modal">x</button>
            </div>
            <div class="modal-body">
                
            {{> game-intro/game-intro}}

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-lg btn-primary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>